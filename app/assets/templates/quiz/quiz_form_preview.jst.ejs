<span class="h4 well well-sm">
	Quiz preview
</span>
<br><br>
<h5>
	<%= quizTitle %>
	<small>&nbsp;&nbsp; created by <a>AUTHOR NAME</a></small>
</h5>
<div class="media" style="float:left; width:60%;margin-top:0;">
	<a class="pull-left">
		QUIZ 
		<br>
		PICTURE
	</a>
	<div class="media-body">
		<strong>
			<%= quizQuestion %>
		</strong>
			<span class="text-muted">&nbsp;&nbsp; <%= quizLength %> prompts</span>
		<p>
			<%= quizDescription %>
		</p>
	</div>
</div>

<div style="float:left; padding:0;width: 40%;margin-top:10px">
	<div id="prev-stats-headers" class="text-right" style="width: 30%; margin-right:5px; display:inline-block;">
		<strong>
			Time limit
			<br>
			Category
			<br>
			Scope
		</strong>
	</div>

	<div id="prev-stats-data" class="text-left" style="width:60%;margin-left:5px;display:inline-block;">
		<div id="prev-time-limit">
			<%= quizTimeLimit %>:00
		</div>

		<div id="prev-category">
			<%= quizCategory %>
		</div>

		<div id="prev-scope">
			<%= quizScope %>
		</div>
	</div>
</div>

<div id="answer-divs-preview" style="width:100%;float:left; border: 1px solid green">
	<hr>
	<div id="simple-ans-prev" class="well">
	</div>

	<div id="ans-with-header-prev" class="well">
	</div>

	<div id="ans-with-img-prev" class="well">
	</div>
</div>


<div id="answer-div-protos" style="display: none;">
	<div id="simple-ans-proto" class="answer-div">
		<span class="ans-text"></span>
	</div>

	<div id="ans-with-header-proto">
		<span class="ans-header"></span>
		<span class="ans-text"></span>
	</div>

	<div id="ans-with-img-proto">
		<div class="ans-text"></div>
		<div class="ans-img"></div>
	</div>
</div>