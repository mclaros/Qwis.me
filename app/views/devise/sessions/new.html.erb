<div id="root-main-div" class="container">
  <div class="row">

      <div class="col-xs-2">
      </div>

      <div class="col-xs-6">
        <div class="page-header">
          <h1>
            Log in
            <small>or <a href="/users/sign_up">Sign Up</a></small>
          </h1>
        </div>

        <%= devise_error_messages! %>

        <div class="form-group">
          <form role="form"action="<%= user_session_url %>" method="POST">
            <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">

            <label for="user-username">
              <span class="h4">
                Username
              </span>
            </label>
            <input type="text" class="form-control" autofocus="autofocus" id="user-username" name="user[username]">

            <br>

            <label for="user-password">
              <span class="h4">
                Password
              </span>
            </label>
            <input type="password" id="user-password" name="user[password]" class="form-control">

            <br>

            <div>
              <input type="hidden" name="user[remember_me]" value="0">
              <input type="checkbox" id="user-remember-me" name="user[remember_me]" value="1">
              <label for="user-remember-me">Remember me</label>
            </div>

            <br>
            
            <input type="submit" name="commit" value="Log in" class="btn btn-primary">
            <a href="<%= new_user_password_url %>" class="btn btn-default">Forgot you password?</a>
          </form>
        </div>


      <%= render "users/shared/links" %>
    </div>
  </div>
</div>


