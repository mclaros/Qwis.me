<script type="application/json" id="bootstrapped_quizzes">
		{	"quizData": <%= (render(:file => 'quizzes/quizzes.rabl')).html_safe %>,
      "currentUserData": <%= (render(:file => 'users/user.rabl')).html_safe %>
		}


</script>

<script type="application/javascript">
  Pace.start();

	$(document).ready(function () {
		var data = JSON.parse($("#bootstrapped_quizzes").html());
		var quizData = data.quizData;
		var usersData = data.usersData;
    var currentUserData = data.currentUserData;
		var $rootEl = $("#root-main-div");

		window.Qwisme.initialize({
      $rootEl: $rootEl,
      quizData: quizData,
      usersData: usersData,
      currentUserData: currentUserData
    });
	});
</script>


<div id="root-main-div" class="container">
</div>

<div class="modal fade" id="noticeModal" tabindex="-1" role="dialog" aria-labelledby="noticeModal" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
        <h4 class="modal-title" id="myModalLabel">Notice</h4>
      </div>
      <div class="modal-body" id="notice">

      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
      </div>
    </div>
  </div>
</div>

<div class="modal fade" id="q-point-modal" tabindex="-1" role="dialog" aria-labelledby="q-point-modal" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
        <h4 class="modal-title" id="q-point-modal-title">Qwismaster points</h4>
      </div>
      <div class="modal-body" id="q-point-modal-explain">
        <h5>What are Qwismaster points?</h5>
        <p>
          Qwismaster points are your way to track your overall activity and progress. You earn points as follows:
        </p>
        <ul>
          <li>
            <strong>20 points</strong> for each <i>other</i> user who favorites your quiz (if they unfavorite, you lose them)
          </li>
          <li>
            <strong>10 points</strong> for each user who completes one of your quizzes (win or lose) 
          </li>
          <li>
            <strong>5 points</strong> for every quiz you complete within the time limit (each time you win)
          </li>
          <li>
            <strong>1 point</strong> for every quiz you complete, whether you win or lose (stacks with points earned via wins)
          </li>
        </ul>

        See user's <i>Play Statistics</i> for more detail.
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
      </div>
    </div>
  </div>
</div>